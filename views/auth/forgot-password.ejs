<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/auth.css" rel="stylesheet">
</head>
<body class="auth-body">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Side - Branding -->
            <div class="col-lg-6 d-none d-lg-flex auth-branding">
                <div class="d-flex flex-column justify-content-center align-items-center text-white p-5 branding-content">
                    <div class="brand-logo mb-4">
                        <img src="/images/logo.png" alt="Farmadescaso" class="img-fluid" style="max-height: 120px; max-width: 100%; display: none;" id="logo-img">
                        <i class="fas fa-pills display-1" id="logo-icon"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Farmadescaso 2021 SL</h2>
                    <p class="lead text-center">
                        Portal comercial profesional para la gestión farmacéutica
                    </p>
                </div>
            </div>
            
            <!-- Right Side - Form -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center">
                <div class="auth-form-container w-100 p-4">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">
                            <i class="fas fa-key me-2"></i>Recuperar Contraseña
                        </h3>
                        <p class="text-muted">Ingresa tu email para recibir un enlace de recuperación</p>
                    </div>
                    
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    
                    <% if (!success) { %>
                    <form action="/auth/forgot-password" method="POST" class="auth-form">
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input type="email" 
                                   class="form-control form-control-lg" 
                                   id="email" 
                                   name="email" 
                                   autocomplete="email"
                                   value="<%= typeof email !== 'undefined' ? email : '' %>"
                                   required 
                                   placeholder="tu@email.com"
                                   autofocus>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Enviar Enlace de Recuperación
                            </button>
                        </div>
                    </form>
                    <% } %>
                    
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            ¿Recordaste tu contraseña? 
                            <a href="/auth/login" class="text-primary text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesión
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Manejo del logo
        document.addEventListener('DOMContentLoaded', function() {
            const logoImg = document.getElementById('logo-img');
            const logoIcon = document.getElementById('logo-icon');
            if (logoImg && logoIcon) {
                logoImg.addEventListener('error', function() {
                    this.style.display = 'none';
                    logoIcon.style.display = 'block';
                });
                if (logoImg.src) {
                    const img = new Image();
                    img.onload = function() {
                        if (logoImg) logoImg.style.display = 'block';
                        if (logoIcon) logoIcon.style.display = 'none';
                    };
                    img.onerror = function() {
                        if (logoImg) logoImg.style.display = 'none';
                        if (logoIcon) logoIcon.style.display = 'block';
                    };
                    img.src = logoImg.src;
                }
            }
        });
    </script>
</body>
</html>
