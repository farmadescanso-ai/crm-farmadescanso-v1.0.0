<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>

    <div class="container py-4">
        <% 
        // La columna real es 'Activo' (tinyint: 1 = activo, 0 = inactivo)
        // También verificar OK_KO y OK/KO por compatibilidad
        const activoValue = articulo.Activo !== undefined ? articulo.Activo : 
                           (articulo.OK_KO === 'Activo' || articulo['OK/KO'] === 'Activo' ? 1 : 
                           (articulo.OK_KO === 'OK' || articulo['OK/KO'] === 'OK' ? 1 : 0));
        const articuloActivo = activoValue === 1 || activoValue === true || activoValue === '1';
        %>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h3 class="mb-0"><i class="fas fa-box-open me-2"></i>Artículo #<%= articulo.Id || articulo.id %></h3>
                <p class="text-muted mb-0">Catálogo Farmadescaso</p>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <span id="estadoArticuloBadge" class="badge <%= articuloActivo ? 'bg-success' : 'bg-secondary' %>">
                    <%= articuloActivo ? 'Activo' : 'Inactivo' %>
                </span>
                <% if (typeof esAdmin !== 'undefined' && esAdmin) { %>
                    <button type="button" id="toggleArticuloEstado" class="btn btn-sm <%= articuloActivo ? 'btn-outline-success' : 'btn-outline-secondary' %>" data-id="<%= articulo.Id || articulo.id %>" data-activo="<%= articuloActivo %>">
                        <i class="fas <%= articuloActivo ? 'fa-toggle-on' : 'fa-toggle-off' %>"></i>
                        <span class="ms-1"><%= articuloActivo ? 'Desactivar' : 'Activar' %></span>
                    </button>
                    <a href="/dashboard/articulos/<%= articulo.Id || articulo.id %>/editar" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar
                    </a>
                <% } %>
                <a href="/dashboard/articulos" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>

        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (query && query.success === 'articulo_actualizado') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Artículo actualizado correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
        <% } %>
        <% if (query && query.success === 'articulo_creado') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Artículo creado correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
        <% } %>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <% const imagen = articulo.Imagen || articulo.imagen; %>
                            <% if (imagen) { %>
                                <img src="<%= imagen %>" alt="Imagen artículo" class="img-fluid rounded" onerror="this.style.display='none'">
                            <% } else { %>
                                <div class="p-5 bg-light rounded">
                                    <i class="fas fa-box-open fa-3x text-secondary"></i>
                                </div>
                            <% } %>
                        </div>
                        <h5 class="fw-bold mb-1"><%= articulo.Nombre || 'Artículo sin nombre' %></h5>
                        <p class="text-muted mb-0"><%= articulo.Marca || 'Marca no especificada' %></p>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-3">
                            <% const camposPrincipales = [
                                { label: 'Código (SKU)', value: articulo.SKU || articulo['Código'] || articulo.Codigo },
                                { label: 'EAN 13', value: articulo.EAN13 || articulo['EAN 13'] || articulo.EAN },
                                { label: 'Presentación', value: articulo.Presentacion || articulo['Presentación'] },
                                { label: 'PVL (€)', value: articulo.PVL || articulo.pvl },
                                { label: 'PCP (€)', value: articulo.PCP || articulo.pcp },
                                { label: 'Unidades / Caja', value: articulo.Unidades_Caja || articulo['Unidades / Caja'] || articulo['Unidades/Caja'] },
                                { label: 'Marca', value: articulo.Marca },
                                { label: 'Imagen', value: articulo.Imagen },
                                { label: 'Hefame', value: articulo['Codigo Hefame'] || articulo['Código Hefame'] || articulo.CodigoHefame },
                                { label: 'Alliance', value: articulo['Codigo Alliance'] || articulo['Código Alliance'] || articulo.CodigoAlliance },
                                { label: 'Cofares', value: articulo['Codigo Cofares'] || articulo['Código Cofares'] || articulo.CodigoCofares },
                                { label: 'Created At', value: articulo.CreatedAt },
                                { label: 'Updated At', value: articulo.UpdatedAt }
                            ]; %>

                            <% camposPrincipales.forEach(function(item) { %>
                                <% 
                                // Mostrar siempre PCP y PVL, incluso si están vacíos
                                const mostrarCampo = item.value !== undefined && item.value !== null && item.value !== '' || 
                                                   (item.label === 'PCP (€)' || item.label === 'PVL (€)');
                                %>
                                <% if (mostrarCampo) { %>
                                <div class="col-md-6">
                                    <div class="border rounded p-3 h-100">
                                        <div class="text-muted small text-uppercase fw-semibold"><%= item.label %></div>
                                        <div class="fw-semibold mt-1">
                                            <% if (item.label === 'PVL (€)' || item.label === 'PCP (€)') { %>
                                                <% if (item.value === null || item.value === undefined || item.value === '') { %>
                                                    <span class="text-muted">No especificado</span>
                                                <% } else { %>
                                                    € <%= (Number(item.value || 0)).toFixed(2).replace('.', ',') %>
                                                <% } %>
                                            <% } else { %>
                                                <%= item.value %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            <% }); %>

                            <% Object.keys(articulo).forEach(function(key) { %>
                                <% if (!['Id', 'id', 'Nombre', 'Marca', 'Imagen', 'SKU', 'Código', 'Codigo', 'PVL', 'pvl', 'PCP', 'pcp', 'Presentacion', 'Presentación', 'Unidades_Caja', 'Unidades / Caja', 'Unidades/Caja', 'EAN13', 'EAN 13', 'EAN', 'CreatedAt', 'UpdatedAt', 'Pedido_Artículos', '_nc_m2m_Pedido_Artículo_Artículos', 'Activo', 'OK_KO', 'OK/KO'].includes(key)) { %>
                                    <% const value = articulo[key]; %>
                                    <% if (value !== undefined && value !== null && value !== '') { %>
                                    <div class="col-md-6">
                                        <div class="border rounded p-3 h-100">
                                            <div class="text-muted small text-uppercase fw-semibold"><%= key %></div>
                                            <div class="fw-semibold mt-1"><%= value %></div>
                                        </div>
                                    </div>
                                    <% } %>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const esAdmin = <%= (typeof esAdmin !== 'undefined' && esAdmin) ? 'true' : 'false' %>;
        const toggleArticuloEstadoBtn = document.getElementById('toggleArticuloEstado');
        const estadoArticuloBadge = document.getElementById('estadoArticuloBadge');

        if (esAdmin && toggleArticuloEstadoBtn) {
            toggleArticuloEstadoBtn.addEventListener('click', async () => {
                if (toggleArticuloEstadoBtn.dataset.loading === 'true') return;

                const id = toggleArticuloEstadoBtn.getAttribute('data-id');
                const activo = toggleArticuloEstadoBtn.getAttribute('data-activo') === 'true';
                const nuevoValor = activo ? 'Inactivo' : 'Activo';

                toggleArticuloEstadoBtn.dataset.loading = 'true';
                toggleArticuloEstadoBtn.disabled = true;

                try {
                    const response = await fetch(`/api/articulos/${id}/okko`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify({ value: nuevoValor })
                    });

                    if (!response.ok) {
                        const errorData = await response.json().catch(() => ({ error: `HTTP ${response.status}` }));
                        throw new Error(errorData.error || `Error HTTP ${response.status}`);
                    }

                    const data = await response.json();
                    if (!data.success) {
                        throw new Error(data.error || 'Error al actualizar el estado del artículo');
                    }

                    const ahoraActivo = !activo;
                    toggleArticuloEstadoBtn.setAttribute('data-activo', String(ahoraActivo));
                    toggleArticuloEstadoBtn.classList.remove('btn-outline-success', 'btn-outline-secondary');
                    toggleArticuloEstadoBtn.classList.add(ahoraActivo ? 'btn-outline-success' : 'btn-outline-secondary');

                    const icon = toggleArticuloEstadoBtn.querySelector('i');
                    if (icon) {
                        icon.classList.remove('fa-toggle-on', 'fa-toggle-off');
                        icon.classList.add(ahoraActivo ? 'fa-toggle-on' : 'fa-toggle-off');
                    }

                    const textSpan = toggleArticuloEstadoBtn.querySelector('span');
                    if (textSpan) {
                        textSpan.textContent = ahoraActivo ? 'Desactivar' : 'Activar';
                    }

                    if (estadoArticuloBadge) {
                        estadoArticuloBadge.classList.remove('bg-success', 'bg-secondary');
                        estadoArticuloBadge.classList.add(ahoraActivo ? 'bg-success' : 'bg-secondary');
                        estadoArticuloBadge.textContent = ahoraActivo ? 'Activo' : 'Inactivo';
                    }
                } catch (error) {
                    console.error('❌ [TOGGLE ARTÍCULO DETAIL] Error:', error);
                    alert(`No se pudo actualizar el estado del artículo: ${error.message || 'Error desconocido'}`);
                } finally {
                    toggleArticuloEstadoBtn.disabled = false;
                    toggleArticuloEstadoBtn.dataset.loading = 'false';
                }
            });
        }
    </script>
    <script src="/js/go-to-top.js"></script>

    <!-- Go to Top Button -->
    <button id="goToTop" class="go-to-top" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</body>
</html>

