<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>

    <div class="container py-4">
        <% if (query && query.success === 'comercial_creado') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Comercial creado correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        <% if (query && query.success === 'comercial_actualizado') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Comercial actualizado correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-user-tie me-2"></i>Comercial #<%= comercial.id || comercial.Id %>
                        </h5>
                        <div class="btn-group">
                            <a href="/dashboard/comerciales" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Volver a Comerciales
                            </a>
                            <a href="/dashboard/comerciales/<%= comercial.id || comercial.Id %>/editar" class="btn btn-light btn-sm">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <form action="/dashboard/comerciales/<%= comercial.id || comercial.Id %>/eliminar" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este comercial? Esta acción no se puede deshacer.');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <% 
                        let rollDisplay = 'Comercial';
                        if (comercial.Roll) {
                            try {
                                const rollArray = typeof comercial.Roll === 'string' ? JSON.parse(comercial.Roll) : comercial.Roll;
                                rollDisplay = Array.isArray(rollArray) ? rollArray.join(', ') : comercial.Roll;
                            } catch (e) {
                                rollDisplay = comercial.Roll;
                            }
                        }
                        %>
                        <dl class="row">
                            <dt class="col-sm-3">ID:</dt>
                            <dd class="col-sm-9"><%= comercial.id || comercial.Id %></dd>

                            <dt class="col-sm-3">Nombre:</dt>
                            <dd class="col-sm-9"><strong><%= comercial.Nombre || comercial.nombre %></strong></dd>

                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9"><a href="mailto:<%= comercial.Email || comercial.email %>"><%= comercial.Email || comercial.email %></a></dd>

                            <dt class="col-sm-3">DNI:</dt>
                            <dd class="col-sm-9"><%= comercial.DNI || comercial.dni || '-' %></dd>

                            <dt class="col-sm-3">Rol:</dt>
                            <dd class="col-sm-9"><span class="badge bg-info"><%= rollDisplay %></span></dd>

                            <dt class="col-sm-3">Móvil:</dt>
                            <dd class="col-sm-9"><%= comercial.Movil || comercial.movil || '-' %></dd>

                            <dt class="col-sm-3">Dirección:</dt>
                            <dd class="col-sm-9"><%= comercial.Direccion || comercial.direccion || '-' %></dd>

                            <dt class="col-sm-3">Código Postal:</dt>
                            <dd class="col-sm-9"><%= comercial.CodigoPostal || comercial.codigoPostal || '-' %></dd>

                            <dt class="col-sm-3">Población:</dt>
                            <dd class="col-sm-9"><%= comercial.Poblacion || comercial.poblacion || '-' %></dd>

                            <dt class="col-sm-3">Provincia:</dt>
                            <dd class="col-sm-9">
                                <% if (nombreProvincia && nombreProvincia.trim() !== '') { %>
                                    <%= nombreProvincia %>
                                <% } else { %>
                                    -
                                <% } %>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">    </script>
    <script src="/js/go-to-top.js"></script>

    <!-- Go to Top Button -->
    <button id="goToTop" class="go-to-top" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</body>
</html>

