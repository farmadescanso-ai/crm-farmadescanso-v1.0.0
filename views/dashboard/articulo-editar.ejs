<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">
                <i class="fas <%= isNew ? 'fa-plus' : 'fa-edit' %> me-2"></i>
                <%= isNew ? 'Nuevo Artículo' : `Editar Artículo #${articulo.Id || articulo.id}` %>
            </h3>
            <% if (!isNew) { %>
            <div class="text-muted small">Última actualización: <%= articulo.UpdatedAt || 'N/D' %></div>
            <% } %>
        </div>

        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% const formAction = isNew ? '/dashboard/articulos' : `/dashboard/articulos/${articulo.Id || articulo.id}`; %>
        <form method="post" action="<%= formAction %>">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <% 
                            // La columna real es 'Activo' (tinyint: 1 = activo, 0 = inactivo)
                            // También verificar OK_KO y OK/KO por compatibilidad
                            const activoValue = articulo.Activo !== undefined ? articulo.Activo : 
                                               (articulo.OK_KO === 'Activo' || articulo['OK/KO'] === 'Activo' ? 1 : 
                                               (articulo.OK_KO === 'OK' || articulo['OK/KO'] === 'OK' ? 1 : 0));
                            const articuloActivoForm = activoValue === 1 || activoValue === true || activoValue === '1';
                            %>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Nombre</label>
                                    <input type="text" name="Nombre" class="form-control" value="<%= articulo.Nombre || '' %>" required>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Código (SKU)</label>
                                    <input type="text" name="SKU" class="form-control" value="<%= articulo.SKU || articulo['Código'] || articulo.Codigo || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">EAN 13</label>
                                    <input type="text" name="EAN13" class="form-control" value="<%= articulo.EAN13 || articulo['EAN 13'] || articulo.EAN || '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Presentación</label>
                                    <input type="text" name="Presentacion" class="form-control" value="<%= articulo.Presentacion || articulo['Presentación'] || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">PVL (€)</label>
                                    <input type="number" step="0.01" min="0" name="PVL" class="form-control" value="<%= articulo.PVL || articulo.pvl || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">PCP (€)</label>
                                    <input type="number" step="0.01" min="0" name="PCP" class="form-control" value="<%= articulo.PCP || articulo.pcp || '' %>" title="Precio de Compra del producto">
                                    <small class="text-muted">Precio de Compra</small>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Unidades / Caja</label>
                                    <input type="number" min="0" name="Unidades_Caja" class="form-control" value="<%= articulo.Unidades_Caja || articulo['Unidades / Caja'] || articulo['Unidades/Caja'] || '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Hefame</label>
                                    <input type="text" name="Codigo Hefame" class="form-control" value="<%= articulo['Codigo Hefame'] || articulo['Código Hefame'] || articulo.CodigoHefame || '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Alliance</label>
                                    <input type="text" name="Codigo Alliance" class="form-control" value="<%= articulo['Codigo Alliance'] || articulo['Código Alliance'] || articulo.CodigoAlliance || '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Cofares</label>
                                    <input type="text" name="Codigo Cofares" class="form-control" value="<%= articulo['Codigo Cofares'] || articulo['Código Cofares'] || articulo.CodigoCofares || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Estado</label>
                                    <select name="Activo" class="form-select">
                                        <option value="1" <%= articuloActivoForm ? 'selected' : '' %>>Activo</option>
                                        <option value="0" <%= articuloActivoForm ? '' : 'selected' %>>Inactivo</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Marca</label>
                                    <input type="text" name="Marca" class="form-control" value="<%= articulo.Marca || '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Imagen (URL)</label>
                                    <input type="url" name="Imagen" class="form-control" value="<%= articulo.Imagen || articulo.imagen || '' %>">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <label class="form-label fw-semibold">Vista previa</label>
                                <div class="border rounded p-3 text-center">
                                    <% const imagen = articulo.Imagen || articulo.imagen; %>
                                    <img id="previewImagen" src="<%= imagen || '' %>" alt="Imagen artículo" class="img-fluid rounded" style="<%= imagen ? '' : 'display:none;' %>" onerror="this.style.display='none'; if(document.getElementById('previewPlaceholder')) document.getElementById('previewPlaceholder').style.display='block';">
                                    <% if (!imagen) { %>
                                    <div id="previewPlaceholder" class="py-5 text-muted">
                                        <i class="fas fa-image fa-2x mb-2"></i>
                                        <div>URL no especificada</div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-save me-2"></i><%= isNew ? 'Crear Artículo' : 'Guardar Cambios' %>
                                </button>
                                <a href="/dashboard/articulos" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const inputImagen = document.querySelector('input[name="Imagen"]');
        const previewImagen = document.getElementById('previewImagen');
        const previewPlaceholder = document.getElementById('previewPlaceholder');

        if (inputImagen) {
            inputImagen.addEventListener('input', () => {
                const url = inputImagen.value.trim();
                if (url) {
                    if (previewPlaceholder) previewPlaceholder.style.display = 'none';
                    if (previewImagen) {
                        previewImagen.style.display = 'block';
                        previewImagen.src = url;
                    }
                } else {
                    if (previewImagen) previewImagen.style.display = 'none';
                    if (previewPlaceholder) previewPlaceholder.style.display = 'block';
                }
            });
        }
    </script>
    <script src="/js/go-to-top.js"></script>

    <!-- Go to Top Button -->
    <button id="goToTop" class="go-to-top" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</body>
</html>
