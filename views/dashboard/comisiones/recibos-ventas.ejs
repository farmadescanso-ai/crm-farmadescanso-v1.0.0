<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="/css/colors.css" rel="stylesheet">
  <link href="/css/dashboard.css" rel="stylesheet">
  <%- include('../../partials/navbar-styles') %>
</head>
<body>
  <%- include('../../partials/navbar-dashboard') %>

  <div class="container-fluid">
    <div class="row">
      <main class="col-12 px-md-4 main-content">
        <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
          <div>
            <h1 class="h3 mb-1">
              <i class="fas fa-receipt me-2 text-primary"></i>
              Recibos (Comisiones de Ventas)
            </h1>
            <div class="text-muted small">
              Agrupado por <strong>comercial</strong> y <strong>día de pago</strong>.
            </div>
          </div>
          <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/dashboard/comisiones/comisiones">
              <i class="fas fa-arrow-left me-1"></i>Volver
            </a>
          </div>
        </div>

        <div class="card mb-3">
          <div class="card-body">
            <form method="GET" action="/dashboard/comisiones/recibos-ventas" class="row g-3">
              <% const mostrarSelectComercial = typeof esAdmin !== 'undefined' && esAdmin; %>

              <% if (mostrarSelectComercial) { %>
              <div class="col-md-4">
                <label class="form-label">Comercial</label>
                <select name="comercial_id" class="form-select">
                  <option value="">Todos</option>
                  <% (comerciales || []).forEach(c => { %>
                    <% const cid = c.id || c.Id; %>
                    <option value="<%= cid %>" <%= String(filters.comercial_id || '') === String(cid) ? 'selected' : '' %>>
                      <%= c.Nombre || c.nombre || ('Comercial #' + cid) %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <% } else { %>
              <div class="col-md-4">
                <label class="form-label">Comercial</label>
                <% 
                  const comercialAutenticado = Array.isArray(comerciales) && comercialIdAutenticado
                    ? comerciales.find(c => (c.id || c.Id) == comercialIdAutenticado)
                    : null;
                  const nombreComercial = comercialAutenticado ? (comercialAutenticado.Nombre || comercialAutenticado.nombre || 'Sin nombre') : 'Sin asignar';
                %>
                <input type="hidden" name="comercial_id" value="<%= comercialIdAutenticado %>">
                <input type="text" class="form-control" value="<%= nombreComercial %>" disabled readonly style="background-color: #e9ecef; cursor: not-allowed;">
              </div>
              <% } %>

              <div class="col-md-3">
                <label class="form-label">Desde</label>
                <input type="date" name="desde" class="form-control" value="<%= filters.desde || '' %>">
              </div>
              <div class="col-md-3">
                <label class="form-label">Hasta</label>
                <input type="date" name="hasta" class="form-control" value="<%= filters.hasta || '' %>">
              </div>
              <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                  <i class="fas fa-filter me-1"></i>Filtrar
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="card">
          <div class="card-header bg-light d-flex align-items-center justify-content-between">
            <div class="fw-semibold">
              <i class="fas fa-table me-2"></i>Recibos
            </div>
            <span class="badge bg-secondary"><%= (recibos || []).length %> día(s)</span>
          </div>
          <div class="card-body">
            <% if (!recibos || recibos.length === 0) { %>
              <div class="alert alert-info mb-0">
                No hay recibos de <strong>ventas</strong> para los filtros actuales.
              </div>
            <% } else { %>
              <div class="table-responsive">
                <table class="table table-sm table-striped table-hover align-middle">
                  <thead>
                    <tr>
                      <th>Fecha pago</th>
                      <th>Comercial</th>
                      <th class="text-end">Base ventas</th>
                      <th class="text-end">Comisión ventas</th>
                      <th class="text-end">Meses</th>
                      <th>Registrado por</th>
                      <th class="text-end">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recibos.forEach(r => { %>
                      <tr>
                        <td><%= r.fecha_pago ? new Date(r.fecha_pago).toLocaleDateString('es-ES') : '-' %></td>
                        <td><%= r.comercial_nombre || ('Comercial #' + r.comercial_id) %></td>
                        <td class="text-end">€ <%= Number(r.base_total_ventas || 0).toLocaleString('es-ES', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                        <td class="text-end fw-bold">€ <%= Number(r.comision_total_ventas || 0).toLocaleString('es-ES', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                        <td class="text-end"><%= Number(r.meses_pagados || 0) %></td>
                        <td class="text-muted small"><%= r.pagado_por || '-' %></td>
                        <td class="text-end">
                          <a class="btn btn-sm btn-primary"
                             href="/dashboard/comisiones/recibos-ventas/<%= r.comercial_id %>/<%= String(r.fecha_pago || '').slice(0,10) %>">
                            <i class="fas fa-eye me-1"></i>Ver
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

