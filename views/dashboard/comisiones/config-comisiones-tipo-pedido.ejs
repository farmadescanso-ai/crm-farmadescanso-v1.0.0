<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Config. Comisiones Tipo Pedido - <%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <%- include('../../partials/navbar-styles') %>
</head>
<body>
    <%- include('../../partials/navbar-dashboard') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar bg-light p-0">
                <div class="sidebar-content">
                    <div class="user-info p-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="user-avatar me-3"><i class="fas fa-user-circle text-primary"></i></div>
                            <div>
                                <h6 class="mb-0 fw-bold"><%= user.nombre %></h6>
                                <small class="text-muted"><%= user.zona || '' %></small>
                            </div>
                        </div>
                    </div>
                    <nav class="sidebar-nav p-3">
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard/articulos"><i class="fas fa-boxes me-2"></i>Artículos</a></li>
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard/clientes"><i class="fas fa-users me-2"></i>Clientes</a></li>
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard/pedidos"><i class="fas fa-shopping-cart me-2"></i>Pedidos</a></li>
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard/agenda"><i class="fas fa-calendar-check me-2"></i>Agenda</a></li>
                            <li class="nav-item mb-2">
                                <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#comisionesSubmenu" aria-expanded="true" id="comisionesMenuToggle">
                                    <i class="fas fa-euro-sign me-2"></i>Comisiones
                                    <i class="fas fa-chevron-down ms-auto float-end" id="comisionesChevron" style="font-size: 0.75rem; transform: rotate(180deg);"></i>
                                </a>
                                <ul class="nav flex-column collapse show" id="comisionesSubmenu" style="margin-left: 1.5rem; border-left: 2px solid #dee2e6; padding-left: 0.5rem;">
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/presupuestos"><i class="fas fa-chart-line me-2"></i>Presupuestos</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/comisiones"><i class="fas fa-money-bill-wave me-2"></i>Comisiones</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/rapeles"><i class="fas fa-trophy me-2"></i>Rapeles</a></li>
                                    <% if (esAdmin) { %>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/objetivos-marca"><i class="fas fa-bullseye me-2"></i>Objetivos por Marca</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/condiciones-especiales"><i class="fas fa-star me-2"></i>Condiciones Especiales</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/fijos-mensuales"><i class="fas fa-money-bill me-2"></i>Fijos Mensuales</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/rapeles-configuracion"><i class="fas fa-cog me-2"></i>Config. Rapeles</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link active" href="/dashboard/comisiones/config-comisiones-tipo-pedido"><i class="fas fa-percent me-2"></i>Config. % Tipo Pedido</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/config-rappel-presupuesto"><i class="fas fa-chart-line me-2"></i>Config. Rappel Presup.</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/config-fijo-mensual"><i class="fas fa-calendar me-2"></i>Config. Fijo Mensual</a></li>
                                    <li class="nav-item mb-1"><a class="nav-link" href="/dashboard/comisiones/config-descuento-transporte"><i class="fas fa-truck me-2"></i>Config. Desc. Transp.</a></li>
                                    <% } %>
                                </ul>
                            </li>
                            <li class="nav-item mb-2"><a class="nav-link" href="/dashboard/comerciales"><i class="fas fa-user-tie me-2"></i>Comerciales</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 main-content">
        <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><i class="fas fa-percent me-2 text-primary"></i>Config. Comisiones por Tipo Pedido</h1>
            <% if (esAdmin) { %>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevaConfiguracion">
                <i class="fas fa-plus me-1"></i>Nueva Configuración
            </button>
            <% } %>
        </div>

        <% if (req?.query?.success) { %>
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>Configuración guardada exitosamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (req?.query?.error) { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i><%= req.query.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Configuración de Comisiones por Tipo de Pedido:</strong> Define los porcentajes de comisión según el tipo de pedido (Transfer, Directo, Normal) por año y marca específica. <strong>Todas las configuraciones deben tener una marca asignada</strong> (IALOZON, YOUBELLE, etc.).
        </div>

        <!-- Filtros -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/dashboard/comisiones/config-comisiones-tipo-pedido" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Marca</label>
                        <select name="marca" class="form-select">
                            <option value="">Todas las marcas</option>
                            <% marcas.forEach(marca => { %>
                            <option value="<%= marca %>" <%= filters.marca === marca ? 'selected' : '' %>><%= marca %></option>
                            <% }) %>
                        </select>
                        <small class="text-muted">Solo se muestran configuraciones por marca específica</small>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Tipo Pedido</label>
                        <select name="nombre_tipo_pedido" class="form-select">
                            <option value="">Todos</option>
                            <option value="Transfer" <%= filters.nombre_tipo_pedido === 'Transfer' ? 'selected' : '' %>>Transfer</option>
                            <option value="Directo" <%= filters.nombre_tipo_pedido === 'Directo' ? 'selected' : '' %>>Directo</option>
                            <option value="Normal" <%= filters.nombre_tipo_pedido === 'Normal' ? 'selected' : '' %>>Normal</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Año</label>
                        <input type="number" name="año_aplicable" class="form-control" value="<%= filters.año_aplicable || '' %>" placeholder="2026">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="activo" class="form-select">
                            <option value="">Todos</option>
                            <option value="true" <%= filters.activo === true ? 'selected' : '' %>>Activas</option>
                            <option value="false" <%= filters.activo === false ? 'selected' : '' %>>Inactivas</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary w-100"><i class="fas fa-filter me-1"></i>Filtrar</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabla -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Marca</th>
                                <th>Tipo Pedido</th>
                                <th>Año</th>
                                <th class="text-end">% Comisión</th>
                                <th>Descripción</th>
                                <th class="text-center">Estado</th>
                                <% if (esAdmin) { %><th class="text-center">Acciones</th><% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (configuraciones?.length > 0) { %>
                            <% configuraciones.forEach(config => { %>
                            <% if (config.marca) { %>
                            <tr>
                                <td><strong><%= config.marca %></strong></td>
                                <td><strong><%= config.nombre_tipo_pedido %></strong></td>
                                <td><%= config.año_aplicable %></td>
                                <td class="text-end"><strong><%= parseFloat(config.porcentaje_comision).toFixed(2) %>%</strong></td>
                                <td><small class="text-muted"><%= config.descripcion || '-' %></small></td>
                                <td class="text-center">
                                    <% if (config.activo === 1 || config.activo === true) { %>
                                    <span class="badge bg-success">Activa</span>
                                    <% } else { %>
                                    <span class="badge bg-secondary">Inactiva</span>
                                    <% } %>
                                </td>
                                <% if (esAdmin) { %>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary" onclick='editarConfig(<%= JSON.stringify(config).replace(/"/g, "&quot;") %>)'>
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="eliminarConfig(<%= config.id %>)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                                <% } %>
                            </tr>
                            <% } %>
                            <% }) %>
                            <% } else { %>
                            <tr>
                                <td colspan="<%= esAdmin ? '7' : '6' %>" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>No hay configuraciones
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal -->
    <% if (esAdmin) { %>
    <div class="modal fade" id="modalNuevaConfiguracion" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Nueva Configuración</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="formConfiguracion" method="POST" action="/dashboard/comisiones/config-comisiones-tipo-pedido">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="configId">
                        <div class="mb-3">
                            <label class="form-label">Marca * <small class="text-muted">(obligatorio)</small></label>
                            <select name="marca" id="configMarca" class="form-select" required>
                                <option value="">Seleccione una marca...</option>
                                <% marcas.forEach(marca => { %>
                                <option value="<%= marca %>"><%= marca %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo de Pedido *</label>
                            <select name="nombre_tipo_pedido" id="configTipoPedido" class="form-select" required>
                                <option value="">Seleccione...</option>
                                <option value="Transfer">Transfer</option>
                                <option value="Directo">Directo</option>
                                <option value="Normal">Normal</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Año Aplicable *</label>
                            <input type="number" name="año_aplicable" id="configAño" class="form-control" required min="2020" max="2030">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Porcentaje de Comisión *</label>
                            <div class="input-group">
                                <input type="number" name="porcentaje_comision" id="configPorcentaje" class="form-control" required step="0.01" min="0" max="100">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <select name="activo" id="configActivo" class="form-select">
                                <option value="true" selected>Activa</option>
                                <option value="false">Inactiva</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea name="descripcion" id="configDescripcion" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function editarConfig(config) {
            document.getElementById('modalTitle').textContent = 'Editar Configuración';
            document.getElementById('configId').value = config.id;
            document.getElementById('configMarca').value = config.marca || '';
            document.getElementById('configTipoPedido').value = config.nombre_tipo_pedido;
            document.getElementById('configAño').value = config.año_aplicable;
            document.getElementById('configPorcentaje').value = config.porcentaje_comision;
            document.getElementById('configActivo').value = (config.activo === 1 || config.activo === true) ? 'true' : 'false';
            document.getElementById('configDescripcion').value = config.descripcion || '';
            new bootstrap.Modal(document.getElementById('modalNuevaConfiguracion')).show();
        }

        function eliminarConfig(id) {
            if (confirm('¿Está seguro de eliminar esta configuración?')) {
                fetch(`/dashboard/comisiones/config-comisiones-tipo-pedido/${id}`, { method: 'DELETE' })
                .then(r => r.json())
                .then(data => data.success ? location.reload() : alert('Error: ' + (data.error || 'Error desconocido')))
                .catch(e => { console.error(e); alert('Error al eliminar'); });
            }
        }

        document.getElementById('modalNuevaConfiguracion')?.addEventListener('hidden.bs.modal', function() {
            document.getElementById('modalTitle').textContent = 'Nueva Configuración';
            document.getElementById('formConfiguracion').reset();
            document.getElementById('configId').value = '';
        });
    </script>
            </main>
        </div>
    </div>
</body>
</html>
