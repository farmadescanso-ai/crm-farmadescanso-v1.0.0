<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas <%= isNew ? 'fa-plus' : 'fa-edit' %> me-2"></i><%= isNew ? 'Nueva Forma de Pago' : `Editar Forma de Pago #${formaPago.id}` %></h5>
                    </div>
                    <div class="card-body">
                        <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
                        <% const formAction = isNew ? '/dashboard/formas-pago' : `/dashboard/formas-pago/${formaPago.id}`; %>
                        <form method="post" action="<%= formAction %>">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Forma de Pago <span class="text-danger">*</span></label>
                                <input type="text" name="FormaPago" class="form-control" value="<%= formaPago ? (formaPago.FormaPago || formaPago.formaPago || '') : '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">DÃ­as</label>
                                <input type="number" name="Dias" class="form-control" value="<%= formaPago ? (formaPago.Dias || formaPago.dias || 0) : 0 %>" min="0">
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <a href="/dashboard/formas-pago" class="btn btn-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-success"><i class="fas fa-save me-1"></i>Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">    </script>
    <script src="/js/go-to-top.js"></script>

    <!-- Go to Top Button -->
    <button id="goToTop" class="go-to-top" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</body>
</html>

