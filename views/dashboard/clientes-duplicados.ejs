                                                        <div class="d-flex align-items-center mb-2">
                                                            <% if (cIdx === 0) { %>
                                                                <span class="badge bg-success badge-duplicado me-2">Principal</span>
                                                            <% } %>
                                                            <strong class="me-3"><%= cliente.Nombre_Razon_Social || cliente.Nombre || 'Sin nombre' %></strong>
                                                            <small class="text-muted">ID: <%= cliente.Id || cliente.id %></small>
                                                        </div>
                                                        
                                                        <% if (cliente.DNI_CIF || cliente.dni_cif) { %>
                                                            <div class="mb-2">
                                                                <small class="text-muted"><i class="fas fa-id-card me-1"></i><strong>DNI/CIF:</strong> <%= cliente.DNI_CIF || cliente.dni_cif %></small>
                                                            </div>
                                                        <% } %>
                                                        
                                                        <% if (cliente.Direccion || cliente.direccion) { %>
                                                            <div class="mb-2">
                                                                <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i><strong>Dirección:</strong> <%= cliente.Direccion || cliente.direccion %></small>
                                                            </div>
                                                        <% } %>
                                                        
                                                        <div class="row g-2 mb-2">
                                                            <% if (cliente.Poblacion || cliente.poblacion) { %>
                                                                <div class="col-md-4">
                                                                    <small class="text-muted"><i class="fas fa-city me-1"></i><strong>Población:</strong> <%= cliente.Poblacion || cliente.poblacion %></small>
                                                                </div>
                                                            <% } %>
                                                            <% if (cliente.Provincia || cliente.provincia || cliente.Nombre_Provincia || cliente.nombre_provincia) { %>
                                                                <div class="col-md-4">
                                                                    <small class="text-muted"><i class="fas fa-map me-1"></i><strong>Provincia:</strong> <%= cliente.Provincia || cliente.provincia || cliente.Nombre_Provincia || cliente.nombre_provincia %></small>
                                                                </div>
                                                            <% } %>
                                                            <% if (cliente.CodigoPostal || cliente.Codigo_Postal || cliente.codigo_postal) { %>
                                                                <div class="col-md-4">
                                                                    <small class="text-muted"><i class="fas fa-mail-bulk me-1"></i><strong>CP:</strong> <%= cliente.CodigoPostal || cliente.Codigo_Postal || cliente.codigo_postal %></small>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        
                                                        <div class="row g-2">
                                                            <% if (cliente.Telefono || cliente.telefono || cliente.Movil || cliente.movil) { %>
                                                                <div class="col-md-6">
                                                                    <small class="text-muted"><i class="fas fa-phone me-1"></i><strong>Teléfono:</strong> <%= cliente.Telefono || cliente.telefono || cliente.Movil || cliente.movil %></small>
                                                                </div>
                                                            <% } %>
                                                            <% if (cliente.Email || cliente.email) { %>
                                                                <div class="col-md-6">
                                                                    <small class="text-muted"><i class="fas fa-envelope me-1"></i><strong>Email:</strong> <%= cliente.Email || cliente.email %></small>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <div class="text-end ms-3">
                                                        <% if (cIdx > 0) { %>
                                                            <div class="acciones-cliente mb-2">
                                                                <button class="btn btn-sm btn-success fusionar-btn" 
                                                                        data-principal="<%= grupo.clientes[0].Id || grupo.clientes[0].id %>"
                                                                        data-duplicado="<%= cliente.Id || cliente.id %>">
                                                                    <i class="fas fa-compress-alt me-1"></i>Fusionar
                                                                </button>
                                                                <button class="btn btn-sm btn-danger eliminar-btn" 
                                                                        data-cliente="<%= cliente.Id || cliente.id %>">
                                                                    <i class="fas fa-trash me-1"></i>Eliminar
                                                                </button>
                                                            </div>
                                                        <% } %>
                                                        <a href="/dashboard/clientes/<%= cliente.Id || cliente.id %>" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-eye me-1"></i>Ver
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Manejar fusionar
        document.querySelectorAll('.fusionar-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const principalId = this.dataset.principal;
                const duplicadoId = this.dataset.duplicado;
                
                if (!confirm('¿Fusionar estos clientes? Los pedidos del duplicado se asignarán al principal.')) {
                    return;
                }
                
                try {
                    const response = await fetch('/dashboard/clientes/duplicados/fusionar', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ clientePrincipalId: principalId, clienteDuplicadoId: duplicadoId })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Clientes fusionados correctamente');
                        location.reload();
                    } else {
                        alert('Error: ' + (data.error || 'Error desconocido'));
                    }
                } catch (error) {
                    alert('Error: ' + error.message);
                }
            });
        });
        
        // Manejar eliminar
        document.querySelectorAll('.eliminar-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const clienteId = this.dataset.cliente;
                
                if (!confirm('¿Eliminar este cliente? Esta acción no se puede deshacer.')) {
                    return;
                }
                
                try {
                    const response = await fetch('/dashboard/clientes/duplicados/eliminar', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ clienteId: clienteId })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Cliente eliminado correctamente');
                        location.reload();
                    } else {
                        alert('Error: ' + (data.error || 'Error desconocido'));
                    }
                } catch (error) {
                    alert('Error: ' + error.message);
                }
            });
        });
    </script>
    <%- include('../partials/navbar-scripts') %>
</body>
</html>
