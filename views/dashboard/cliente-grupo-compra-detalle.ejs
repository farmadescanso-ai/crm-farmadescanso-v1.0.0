<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>

    <div class="container py-4">
        <% if (query && query.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Operación realizada correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-link me-2"></i>Asignación #<%= relacion.id %></h5>
                        <div class="btn-group">
                            <a href="/dashboard/clientes-grupos-compras/<%= relacion.id %>/editar" class="btn btn-light btn-sm"><i class="fas fa-edit me-1"></i>Editar</a>
                            <% if (relacion.Activa === 1 || String(relacion.Activa) === '1') { %>
                            <form action="/dashboard/clientes-grupos-compras/<%= relacion.id %>/cerrar" method="POST" class="d-inline" onsubmit="return confirm('¿Cerrar esta asignación?');">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-ban me-1"></i>Cerrar</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Cliente:</dt>
                            <dd class="col-sm-9"><strong><%= relacion.ClienteNombre || ('Cliente #' + relacion.Id_Cliente) %></strong> <small class="text-muted">(ID: <%= relacion.Id_Cliente %>)</small></dd>
                            <dt class="col-sm-3">Grupo:</dt>
                            <dd class="col-sm-9"><strong><%= relacion.GrupoNombre || ('Grupo #' + relacion.Id_GrupoCompras) %></strong> <small class="text-muted">(ID: <%= relacion.Id_GrupoCompras %>)</small></dd>
                            <dt class="col-sm-3">Nº Socio:</dt>
                            <dd class="col-sm-9"><%= relacion.NumSocio || '—' %></dd>
                            <dt class="col-sm-3">Activa:</dt>
                            <dd class="col-sm-9"><%= (relacion.Activa === 1 || String(relacion.Activa) === '1') ? 'Sí' : 'No' %></dd>
                            <dt class="col-sm-3">Fecha Alta:</dt>
                            <dd class="col-sm-9"><%= relacion.Fecha_Alta ? new Date(relacion.Fecha_Alta).toLocaleString('es-ES') : '—' %></dd>
                            <dt class="col-sm-3">Fecha Baja:</dt>
                            <dd class="col-sm-9"><%= relacion.Fecha_Baja ? new Date(relacion.Fecha_Baja).toLocaleString('es-ES') : '—' %></dd>
                            <dt class="col-sm-3">Observaciones:</dt>
                            <dd class="col-sm-9"><%= relacion.Observaciones || '—' %></dd>
                        </dl>
                        <div class="d-flex justify-content-end">
                            <a href="/dashboard/clientes-grupos-compras" class="btn btn-secondary">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/go-to-top.js"></script>
    <button id="goToTop" class="go-to-top" title="Ir arriba"><i class="fas fa-arrow-up"></i></button>
</body>
</html>

