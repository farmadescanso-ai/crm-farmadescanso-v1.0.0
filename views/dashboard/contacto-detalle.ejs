<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">

    <%- include('../partials/navbar-styles') %></head>
<body>
    <%- include('../partials/navbar-dashboard') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0"><i class="fas fa-address-book me-2"></i>Contacto #<%= contacto.Id %></h3>
            <div class="d-flex align-items-center gap-2">
                <a href="/dashboard/contactos/<%= contacto.Id %>/clientes" class="btn btn-info"><i class="fas fa-link me-1"></i>Clientes</a>
                <a href="/dashboard/contactos/<%= contacto.Id %>/editar" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Editar</a>
                <a href="/dashboard/contactos" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Volver</a>
            </div>
        </div>

        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>Operaci√≥n realizada correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <div class="row g-3">
                    <% Object.keys(contacto).forEach(function(key){ %>
                        <div class="col-md-6">
                            <div class="border rounded p-2 h-100">
                                <div class="text-muted small"><%= key %></div>
                                <div class="fw-semibold"><%= contacto[key] || '' %></div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/go-to-top.js"></script>

    <!-- Go to Top Button -->
    <button id="goToTop" class="go-to-top" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</body>
</html>

