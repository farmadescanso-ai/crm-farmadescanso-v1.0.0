<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión Códigos Postales - <%= title %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/colors.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <style>
        .table-container {
            max-height: 75vh;
            overflow: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.75rem;
        }
        .table th {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 10;
            border-bottom: 2px solid #dee2e6;
        }
        .search-box {
            background: #ffffff;
            padding: 1rem 1.5rem;
            border: 1px solid #dee2e6;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(11, 137, 27, 0.05);
        }
    </style>
    <%- include('../partials/navbar-styles') %>
</head>
<body>
    <%- include('../partials/navbar-dashboard') %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 sidebar bg-light p-0">
                <div class="sidebar-content">
                    <div class="user-info p-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="user-avatar me-3">
                                <i class="fas fa-user-circle text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold"><%= user.nombre %></h6>
                                <small class="text-muted"><%= user.zona || 'Usuario' %></small>
                            </div>
                        </div>
                    </div>
                    
                    <nav class="sidebar-nav p-3">
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2">
                                <a class="nav-link" href="/dashboard">
                                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#ajustesSubmenu" aria-expanded="true" aria-controls="ajustesSubmenu">
                                    <i class="fas fa-cog me-2"></i>Ajustes
                                    <i class="fas fa-chevron-down ms-auto float-end" style="font-size: 0.75rem; transition: transform 0.3s; transform: rotate(180deg);"></i>
                                </a>
                                <ul class="nav flex-column collapse show" id="ajustesSubmenu" style="margin-left: 1.5rem; border-left: 2px solid #dee2e6; padding-left: 0.5rem;">
                                    <li class="nav-item mb-1">
                                        <a class="nav-link" href="/dashboard/ajustes/pcp">
                                            <i class="fas fa-euro-sign me-2"></i>Gestión PCP
                                        </a>
                                    </li>
                                    <li class="nav-item mb-1">
                                        <a class="nav-link active" href="/dashboard/ajustes/codigos-postales">
                                            <i class="fas fa-map-marker-alt me-2"></i>Códigos Postales
                                        </a>
                                    </li>
                                    <li class="nav-item mb-1">
                                        <a class="nav-link" href="/dashboard/ajustes/asignaciones-comerciales">
                                            <i class="fas fa-user-tie me-2"></i>Asignaciones Comerciales
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            
            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 main-content">
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <div>
                        <h1 class="h2 fw-bold text-primary">
                            <i class="fas fa-map-marker-alt me-2"></i>Gestión de Códigos Postales
                        </h1>
                        <p class="text-muted mb-0">Administra los códigos postales de España</p>
                    </div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevoCodigoPostal">
                        <i class="fas fa-plus me-2"></i>Nuevo Código Postal
                    </button>
                </div>

                <% if (success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i><%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
                <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                <!-- Filtros -->
                <div class="search-box">
                    <form method="GET" action="/dashboard/ajustes/codigos-postales" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Código Postal</label>
                            <input type="text" class="form-control" name="codigoPostal" value="<%= filtros.codigoPostal || '' %>" placeholder="Ej: 30001">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Localidad</label>
                            <input type="text" class="form-control" name="localidad" value="<%= filtros.localidad || '' %>" placeholder="Ej: Murcia">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Provincia</label>
                            <select class="form-select" name="idProvincia">
                                <option value="">Todas</option>
                                <% provincias.forEach(prov => { %>
                                <option value="<%= prov.id %>" <%= filtros.idProvincia == prov.id ? 'selected' : '' %>><%= prov.Nombre %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100 me-2">
                                <i class="fas fa-search me-2"></i>Buscar
                            </button>
                            <a href="/dashboard/ajustes/codigos-postales" class="btn btn-outline-secondary">
                                <i class="fas fa-redo"></i>
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Tabla -->
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Códigos Postales (<%= codigosPostales.length %>)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-container">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Código Postal</th>
                                        <th>Localidad</th>
                                        <th>Provincia</th>
                                        <th>Comunidad Autónoma</th>
                                        <th>Activo</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (codigosPostales.length === 0) { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                            No se encontraron códigos postales
                                        </td>
                                    </tr>
                                    <% } else { %>
                                    <% codigosPostales.forEach(cp => { %>
                                    <tr>
                                        <td><%= cp.id %></td>
                                        <td><strong><%= cp.CodigoPostal %></strong></td>
                                        <td><%= cp.Localidad %></td>
                                        <td><%= cp.Provincia %></td>
                                        <td><%= cp.ComunidadAutonoma || '-' %></td>
                                        <td>
                                            <% if (cp.Activo) { %>
                                            <span class="badge bg-success">Activo</span>
                                            <% } else { %>
                                            <span class="badge bg-secondary">Inactivo</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-primary" onclick="editarCodigoPostal(<%= JSON.stringify(cp).replace(/"/g, '&quot;') %>)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form method="POST" action="/dashboard/ajustes/codigos-postales/<%= cp.id %>/eliminar" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este código postal?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal Nuevo/Editar Código Postal -->
    <div class="modal fade" id="modalNuevoCodigoPostal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitulo">Nuevo Código Postal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/dashboard/ajustes/codigos-postales" id="formCodigoPostal">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="codigoPostalId">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Código Postal <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="CodigoPostal" id="CodigoPostal" required maxlength="5" pattern="[0-9]{5}">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Localidad <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Localidad" id="Localidad" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Provincia <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Provincia" id="Provincia" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Provincia (ID)</label>
                                <select class="form-select" name="Id_Provincia" id="Id_Provincia">
                                    <option value="">Seleccionar...</option>
                                    <% provincias.forEach(prov => { %>
                                    <option value="<%= prov.id %>"><%= prov.Nombre %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Comunidad Autónoma</label>
                                <input type="text" class="form-control" name="ComunidadAutonoma" id="ComunidadAutonoma">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Latitud</label>
                                <input type="number" step="any" class="form-control" name="Latitud" id="Latitud">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Longitud</label>
                                <input type="number" step="any" class="form-control" name="Longitud" id="Longitud">
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="Activo" id="Activo" value="1" checked>
                                    <label class="form-check-label" for="Activo">Activo</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function editarCodigoPostal(cp) {
            document.getElementById('modalTitulo').textContent = 'Editar Código Postal';
            document.getElementById('codigoPostalId').value = cp.id;
            document.getElementById('CodigoPostal').value = cp.CodigoPostal || '';
            document.getElementById('Localidad').value = cp.Localidad || '';
            document.getElementById('Provincia').value = cp.Provincia || '';
            document.getElementById('Id_Provincia').value = cp.Id_Provincia || '';
            document.getElementById('ComunidadAutonoma').value = cp.ComunidadAutonoma || '';
            document.getElementById('Latitud').value = cp.Latitud || '';
            document.getElementById('Longitud').value = cp.Longitud || '';
            document.getElementById('Activo').checked = cp.Activo == 1;
            
            // Cambiar action del form
            document.getElementById('formCodigoPostal').action = '/dashboard/ajustes/codigos-postales/' + cp.id;
            
            new bootstrap.Modal(document.getElementById('modalNuevoCodigoPostal')).show();
        }

        // Resetear formulario al cerrar modal
        document.getElementById('modalNuevoCodigoPostal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('formCodigoPostal').reset();
            document.getElementById('formCodigoPostal').action = '/dashboard/ajustes/codigos-postales';
            document.getElementById('modalTitulo').textContent = 'Nuevo Código Postal';
            document.getElementById('codigoPostalId').value = '';
        });
    </script>
    <%- include('../partials/navbar-scripts') %>
</body>
</html>
