    <script>
      // Auto-relleno por Código Postal: Provincia + País + Idioma + Moneda
      (function () {
        const cpInput = document.getElementById('inputCodigoPostal');
        const selProv = document.getElementById('selectProvincia');
        const selPais = document.getElementById('selectPais');
        const codPaisInput = document.querySelector('input[name="CodPais"]');
        const selIdioma = document.getElementById('selectIdioma');
        const selMoneda = document.getElementById('selectMoneda');

        if (!cpInput || !selProv || !selPais || !selIdioma || !selMoneda) return;

        // No pisar cambios manuales
        [selProv, selPais, selIdioma, selMoneda].forEach(el => {
          el.addEventListener('change', () => { el.dataset.userTouched = '1'; }, { passive: true });
        });

        const pickOptionByText = (select, includesText) => {
          const wanted = String(includesText || '').toLowerCase();
          if (!wanted) return null;
          const opts = Array.from(select.options || []);
          const found = opts.find(o => String(o.text || '').toLowerCase().includes(wanted));
          return found ? String(found.value) : null;
        };

        const setSelectValueSoft = (select, value) => {
          if (!value) return;
          // solo si está vacío o si el usuario no lo tocó manualmente
          if (select.dataset.userTouched === '1' && String(select.value || '').trim() !== '') return;
          select.value = String(value);
          // disparar change para que otras lógicas (si existen) reaccionen
          try { select.dispatchEvent(new Event('change', { bubbles: true })); } catch (_) {}
        };

        const setDefaultsIfEmpty = () => {
          if (!selIdioma.value) {
            const v = pickOptionByText(selIdioma, 'español') || pickOptionByText(selIdioma, 'espanol');
            if (v) selIdioma.value = v;
          }
          if (!selMoneda.value) {
            const v = pickOptionByText(selMoneda, 'euro');
            if (v) selMoneda.value = v;
          }
        };

        let t = null;
        const focusNextEmptyAfter = (fromEl) => {
          try {
            const form = (fromEl && fromEl.form) ? fromEl.form : document.querySelector('form');
            if (!form) return;

            const fields = Array.from(form.querySelectorAll('input, select, textarea'))
              .filter(el => el && el !== fromEl)
              .filter(el => !el.disabled)
              .filter(el => {
                const tag = String(el.tagName || '').toLowerCase();
                if (tag === 'input') {
                  const type = String(el.getAttribute('type') || '').toLowerCase();
                  if (type === 'hidden') return false;
                }
                // no forzar focus en readonly (p.ej. CodPais legacy)
                if (el.hasAttribute('readonly')) return false;
                // evitar botones
                if (tag === 'button') return false;
                return true;
              });

            // Desde "fromEl" hacia delante
            const idx = fields.indexOf(fromEl);
            const start = idx >= 0 ? idx + 1 : 0;
            for (let i = start; i < fields.length; i++) {
              const el = fields[i];
              const tag = String(el.tagName || '').toLowerCase();
              const val = String(el.value ?? '').trim();
              // Para selects: vacío = '' (opción placeholder)
              const isEmpty = val === '';
              if (isEmpty) {
                el.focus();
                return;
              }
            }
          } catch (_) {}
        };

        const resolve = async (opts = {}) => {
          const cp = String(cpInput.value || '').replace(/[^0-9]/g, '');
          if (cp.length < 4) return;

          try {
            const res = await fetch(`/api/codigos-postales/resolve?cp=${encodeURIComponent(cp)}`, {
              credentials: 'include',
              headers: { 'Accept': 'application/json' }
            });
            const json = await res.json().catch(() => null);
            if (!res.ok || !json || !json.success) return;

            const d = json.data || {};
            setSelectValueSoft(selProv, d.provinciaId);
            setSelectValueSoft(selPais, d.paisId);
            setSelectValueSoft(selIdioma, d.idiomaId);
            setSelectValueSoft(selMoneda, d.monedaId);

            if (codPaisInput && d.paisIso && !codPaisInput.value) {
              codPaisInput.value = String(d.paisIso);
            }

            if (opts && opts.focusNextEmpty) {
              // Tras autocompletar, saltar al siguiente campo SIN datos
              focusNextEmptyAfter(cpInput);
            }
          } catch (_) {
            // silencioso (no bloquear el formulario)
          }
        };

        cpInput.addEventListener('input', () => {
          clearTimeout(t);
          t = setTimeout(() => resolve({ focusNextEmpty: false }), 350);
        }, { passive: true });

        cpInput.addEventListener('blur', () => {
          clearTimeout(t);
          resolve({ focusNextEmpty: true });
        }, { passive: true });

        // Enter en CP: autocompletar y saltar al siguiente campo vacío
        cpInput.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            e.preventDefault();
            clearTimeout(t);
            resolve({ focusNextEmpty: true });
          }
        });

        // Defaults iniciales: España -> Español, Euro (si están vacíos)
        setDefaultsIfEmpty();
        // Si ya hay CP, resolver al cargar
        if (String(cpInput.value || '').trim()) {
          setTimeout(() => resolve({ focusNextEmpty: false }), 50);
        }
      })();
    </script>
