    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const searchInput = document.getElementById('searchInput');
        const searchField = document.getElementById('searchField');
        const clearSearch = document.getElementById('clearSearch');
        const filterEstado = document.getElementById('filterEstado');
        const filterMarca = document.getElementById('filterMarca');
        const pedidosMostrados = document.getElementById('pedidosMostrados');
        let rows = Array.from(document.querySelectorAll('#pedidosTable tbody tr'));
        
        // Variables para ordenamiento
        let currentSortColumn = null;
        let currentSortDirection = 'asc'; // 'asc' o 'desc'

        function normalize(text) {
            if (!text) return '';
            return String(text)
                .toLowerCase()
                .normalize('NFD')
                .replace(/[^a-z0-9\s.-]/g, '')
                .trim();
        }

        function highlight(text, term) {
            if (!term || !text) return text;
            const regex = new RegExp(`(${term.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            return text.replace(regex, '<span class="highlight">$1</span>');
        }

        function performSearch() {
            const field = searchField.value;
            const term = normalize(searchInput.value);
            const estadoFiltro = filterEstado.value;
            const marcaFiltro = filterMarca.value;
            let visible = 0;
            const highlightMap = {
                numero: 0,
                cliente: 1,
                estado: 4,
                formaPago: 5,
                tipoPedido: 6
            };

            rows.forEach(row => {
                const data = JSON.parse(row.dataset.pedido || '{}');
                const cells = row.querySelectorAll('td');
                let match = false;

                if (!term) {
                    match = true;
                } else if (field === 'all') {
                    const pool = [
                        data.numero,
                        data.cliente,
                        data.estado,
                        data.formaPago,
                        data.tipoPedido
                    ];
                    match = pool.some(value => normalize(value).includes(term));
                } else {
                    let value;
                    switch (field) {
                        case 'numero': value = data.numero || data.id; break;
                        case 'cliente': value = data.cliente; break;
                        case 'estado': value = data.estado; break;
                        case 'formaPago': value = data.formaPago; break;
                        case 'tipoPedido': value = data.tipoPedido; break;
                        default: value = ''; break;
                    }
                    match = normalize(value).includes(term);
                }

                // Aplicar filtro de estado
                if (match) {
                    const estadoActual = (data.estado || '').toLowerCase();
                    if (estadoFiltro === 'activos' && estadoActual === 'cancelado') {
                        match = false;
                    } else if (estadoFiltro === 'cancelados' && estadoActual !== 'cancelado') {
                        match = false;
                    }
                }

                // Aplicar filtro de marca
                if (match && marcaFiltro !== 'todas') {
                    if (marcaFiltro === 'mixto') {
                        // Solo mostrar pedidos mixtos
                        match = data.esMixto === true;
                    } else {
                        // Mostrar pedidos que contengan la marca seleccionada
                        const marcas = data.marcas || [];
                        match = marcas.some(marca => normalize(marca) === normalize(marcaFiltro));
                    }
                }

                if (match) {
                    row.style.display = '';
                    visible++;

                    if (term) {
                        const fieldsToHighlight = field === 'all'
                            ? ['numero', 'cliente', 'estado', 'formaPago', 'tipoPedido']
                            : [field];
                        fieldsToHighlight.forEach(key => {
                            const index = highlightMap[key];
                            const cell = cells[index];
                            if (cell) {
                                const originalText = cell.textContent;
                                cell.innerHTML = highlight(originalText, searchInput.value);
                            }
                        });
                    } else {
                        Object.values(highlightMap).forEach(index => {
                            const cell = cells[index];
                            if (cell) {
                                cell.innerHTML = cell.textContent;
                            }
                        });
                    }
                } else {
                    row.style.display = 'none';
                }
            });

            pedidosMostrados.textContent = visible;
        }

        searchInput.addEventListener('input', performSearch);
        searchField.addEventListener('change', performSearch);
        filterEstado.addEventListener('change', performSearch);
        filterMarca.addEventListener('change', performSearch);
        clearSearch.addEventListener('click', () => {
            searchInput.value = '';
            searchField.value = 'all';
            filterEstado.value = 'todos';
            filterMarca.value = 'todas';
            performSearch();
        });

        performSearch();

        // Función para formatear fechas en DD/MM/YYYY (para comparación)
        function parsearFechaDDMMYYYY(fechaStr) {
            if (!fechaStr || fechaStr === '—') return null;
            const partes = fechaStr.split('/');
            if (partes.length !== 3) return null;
            const dia = parseInt(partes[0], 10);
            const mes = parseInt(partes[1], 10) - 1;
            const año = parseInt(partes[2], 10);
            return new Date(año, mes, dia);
        }

        // Función para obtener el valor de una celda según el tipo de columna
        function obtenerValorCelda(row, columnIndex, sortType) {
            const cells = row.querySelectorAll('td');
            const cell = cells[columnIndex];
            if (!cell) return '';

            const text = cell.textContent.trim();
            
            if (sortType === 'numero') {
                // Extraer número del formato P250001
                const match = text.match(/P?(\d+)/);
                return match ? parseInt(match[1], 10) : 0;
            } else if (sortType === 'fecha' || sortType === 'fechaEntrega') {
                const fecha = parsearFechaDDMMYYYY(text);
                return fecha ? fecha.getTime() : 0;
            } else if (sortType === 'total') {
                // Extraer número del formato "€ 1,234.56" o "€ 1.234,56"
                // Eliminar símbolo de euro y espacios
                let numeroStr = text.replace(/[€\s]/g, '');
                // Detectar formato: si tiene punto como separador de miles y coma como decimal
                if (numeroStr.includes('.') && numeroStr.includes(',')) {
                    // Formato español: 1.234,56 -> 1234.56
                    numeroStr = numeroStr.replace(/\./g, '').replace(',', '.');
                } else if (numeroStr.includes(',')) {
                    // Solo coma, puede ser decimal
                    numeroStr = numeroStr.replace(',', '.');
                }
                return parseFloat(numeroStr) || 0;
            } else if (sortType === 'lineas') {
                return parseInt(text, 10) || 0;
            } else {
                // Texto normal
                return text.toLowerCase();
            }
        }

        // Función para ordenar las filas
        function ordenarFilas(columnIndex, sortType) {
            const tbody = document.querySelector('#pedidosTable tbody');
            // Obtener todas las filas del tbody (incluyendo las ocultas)
            const todasLasFilas = Array.from(tbody.querySelectorAll('tr'));
            
            // Determinar dirección de ordenamiento
            if (currentSortColumn === columnIndex) {
                currentSortDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
            } else {
                currentSortColumn = columnIndex;
                currentSortDirection = 'asc';
            }

            // Ordenar todas las filas
            todasLasFilas.sort((a, b) => {
                const valorA = obtenerValorCelda(a, columnIndex, sortType);
                const valorB = obtenerValorCelda(b, columnIndex, sortType);

                let comparacion = 0;
                if (typeof valorA === 'number' && typeof valorB === 'number') {
                    comparacion = valorA - valorB;
                } else {
                    comparacion = String(valorA).localeCompare(String(valorB), 'es', { numeric: true, sensitivity: 'base' });
                }

                return currentSortDirection === 'asc' ? comparacion : -comparacion;
            });

            // Actualizar el DOM - reinsertar todas las filas en orden
            todasLasFilas.forEach(fila => tbody.appendChild(fila));
            
            // Actualizar la referencia de rows
            rows = todasLasFilas;

            // Actualizar clases CSS en las cabeceras
            document.querySelectorAll('.table th.sortable').forEach(th => {
                th.classList.remove('sort-asc', 'sort-desc');
            });

            const thActual = document.querySelector(`.table th.sortable[data-sort="${sortType}"]`);
            if (thActual) {
                thActual.classList.add(currentSortDirection === 'asc' ? 'sort-asc' : 'sort-desc');
            }

            // Reaplicar búsqueda/filtros después de ordenar
            performSearch();
        }

        // Añadir event listeners a las cabeceras ordenables
        document.querySelectorAll('.table th.sortable').forEach(th => {
            th.addEventListener('click', () => {
                const sortType = th.getAttribute('data-sort');
                const columnIndex = Array.from(th.parentElement.children).indexOf(th);
                ordenarFilas(columnIndex, sortType);
            });
        });

        document.querySelectorAll('.toggle-estado-pedido').forEach(button => {
            button.addEventListener('click', async () => {
                if (button.dataset.loading === 'true') return;
                const id = button.getAttribute('data-id');
                const estadoActual = button.getAttribute('data-estado') || 'Pendiente';
                const esCancelado = estadoActual.toLowerCase() === 'cancelado';
                const nuevoEstado = esCancelado ? 'Pendiente' : 'Cancelado';

                const confirmado = confirm(`¿Seguro que deseas ${esCancelado ? 'reactivar' : 'cancelar'} este pedido?`);
                if (!confirmado) return;

                button.dataset.loading = 'true';
                button.disabled = true;

                try {
                    const response = await fetch(`/api/pedidos/${id}/estado`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify({ estado: nuevoEstado })
                    });

                    if (!response.ok) {
                        const errorData = await response.json().catch(() => ({ error: `HTTP ${response.status}` }));
                        throw new Error(errorData.error || `Error HTTP ${response.status}`);
                    }

                    window.location.reload();
                } catch (error) {
                    console.error('❌ [TOGGLE PEDIDO LISTADO] Error:', error);
                    alert(`No se pudo cambiar el estado del pedido: ${error.message || 'Error desconocido'}`);
                } finally {
                    button.disabled = false;
                    button.dataset.loading = 'false';
                }
            });
        });

        document.querySelectorAll('.pedido-delete-form').forEach(form => {
            form.addEventListener('submit', event => {
                const numero = form.dataset.numero || 'este pedido';
                const confirmed = confirm(`¿Seguro que deseas anular el pedido ${numero}? Esta acción no se puede deshacer.`);
                if (!confirmed) {
                    event.preventDefault();
                }
            });
        });
    </script>
