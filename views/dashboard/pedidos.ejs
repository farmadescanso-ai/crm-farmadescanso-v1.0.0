                                                <i class="fas <%= estadoLower === 'cancelado' ? 'fa-undo' : 'fa-ban' %>"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
